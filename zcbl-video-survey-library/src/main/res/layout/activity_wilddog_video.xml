<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.wilddog.video.base.WilddogVideoView
        android:id="@+id/wilddog_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/iv_goback"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:text="挂断"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_goback"
        android:padding="3dp"
        />

    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ic_lignt_close" />

    <ImageView
        android:id="@+id/iv_switch_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_light"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@drawable/ic_switch_camera" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_switch_audio"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@+id/iv_switch_camera"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/ic_switch_camera" />-->

    <ImageView
        android:id="@+id/iv_takepic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/ic_takepic" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>